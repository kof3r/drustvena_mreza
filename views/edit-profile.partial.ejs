    <style>
        body {
            margin: 20px auto;
        }

        .text_orange {
            color: darkorange;
            font-family: "Times New Roman";
            font-size: 25px;
        }
        .text_other {
            color: green;
            font-family: "Times New Roman";
            font-size: 18px;
        }

        .text_center {
            text-align: center;
        }
        
    </style>
 
    
    
    <div class="container">
        <form action="/profile/edit" method="post" id="loginForm" class="form-inline">
         <div class="col-md-3">
            <div class="well">
                <label class= "text_orange"> PERSONAL INFORMATION</label>
             </div>   
             <div class="form-group">
                <a class ="btn btn-danger" role="button" href="/">DECLINE</a>
             </div>
             <div class="form-group">
               
                    <input type="submit" class ="btn btn-info" role="button" value="SAVE" />
          
             </div>     
        </div>
             

        <div class="col-md-4 col-sm-6">
            <div class="well">
            
              
                   
                         <div class="control-group">
                            <label class = "text_other control-label" for="firstName">FIRST NAME</label>
                            <div class="controls">
                            <input type="text" id="firstName" name="firstName" placeholder="" class="form-control" />
                             </div>
                             </div>
                          <div class="control-group">
                             <label class = "text_other control-label" for="middleName">MIDDLE NAME</label>
                              <div class="controls">
                                <input type="text" id="middleName" name="middleName" placeholder="" class="form-control" />
                              </div>
                         </div>
                              
                          <div class="control-group">
                             <label class = "text_other control-label" for="lastName">LAST NAME</label>
                             <div class="controls">
                              <input type="text" id="lastName" name="lastName" placeholder="" class="form-control" />
                              </div>
                        </div>
             
        
                
                        <div class="control-group">
                            <label for="country" class = "text_other">COUNTRY</label>
                            
                             <div class="controls">
                            <input type="text" id="country" name="country" placeholder="" class="form-control" list="countries" />
                            <% include countries-datalist.partial.ejs %>
                            </div>
                        </div>    
                                
                        <div class="control-group">
                            <label for = "cit" class = "text_other" for="city">CITY</label>
                             <div class="controls">
                                <input type="text" id="cit" name="city" placeholder="" class="form-control" />
                            </div>
                        </div>        
                        <div class="control-group">
                    
                            <label class = "text_other" for="address">ADDRESS</label>
                             <div class="controls">
                                 <input type="text" id="address" name="address" placeholder="" class="form-control" />
                            </div>
                        </div>
                    
            </div>
        
        </div>
        
        <div class="col-md-4 col-sm-6">
            <div class="well">
                
                <div class="control-group">
                    <label class = "text_other">RELATIONSHIP</label>
                        <br />
                          <label><input type="radio" name="relationship" value="complicated" checked="checked" />complicated</label>
                        <br />
                          <label><input type="radio" name="relationship" value="single" />single</label>
                        <br />
                          <label><input type="radio" name="relationship" value="dating" />dating</label>
                        <br />
                          <label><input type="radio" name="relationship" value="married" />married</label>
                        <br />
                          <label><input type="radio" name="relationship" value="other" />other</label>
                </div>
                  
                    
                 <div class="control-group">
                    <label class = "text_other">GENDER</label>
                     <br />
                       <label><input type="radio" name="gender" value="male" checked="checked" />Male</label>
                    <br />
                      <label><input type="radio" name="gender" value="female" />Female</label>
                    <br />
                      <label><input type="radio" name="gender" value="other" />Other</label>
                 </div>
                
                     
                    <div class="control-group">
                        <label for="date" class = "text_other" for="date">DATE OF BIRTH</label>
                        <input type="date" class="form-control" id="date" />
                    </div>
                                
           

            </div>     
        </div>    
        
     </form>    
      
</div> 
        
